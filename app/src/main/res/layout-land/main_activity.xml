<?xml version="1.0" encoding="utf-8"?>
<com.example.andrew.customviewapplication.view.DualPaneContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/container">

    <com.example.andrew.customviewapplication.view.ItemListView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:entries="@array/fruit_array"/>

    <include layout="@layout/detail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"/>

</com.example.andrew.customviewapplication.view.DualPaneContainer>